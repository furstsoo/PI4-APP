<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.project.activity.CadastroActivity">

 <LinearLayout android:layout_width="match_parent" android:layout_height="fill_parent"
               android:orientation="vertical" tools:ignore="MissingConstraints">
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" android:id="@+id/layoutCadastrar">
      <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="100dp">
        <TextView
                android:text="Nome:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbleNome"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/txNome"/>
      </TableRow>
      <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="30dp">
        <TextView
                android:text="Apartamento:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblApart"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/txApart"/>
      </TableRow>
      <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="30dp">
        <TextView
                android:text="Bloco:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblBloco"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/txBloco"/>
      </TableRow>
      <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="30dp">
        <TextView
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblEmail"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/txEmail"/>
      </TableRow>
      <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="30dp">
        <TextView
                android:text="Senha:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblSenha"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text=""
                android:ems="10"
                android:id="@+id/txSenha"/>
      </TableRow>
      <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="30dp">

        <Button
                android:text="Cadastrar"
                android:layout_width="match_parent" android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="match_parent" android:id="@+id/btnCadastro"/>
      </TableRow>
    </TableLayout>
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>