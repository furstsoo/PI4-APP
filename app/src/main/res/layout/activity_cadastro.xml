<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.project.activity.CadastroActivity">
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/txNome"
          app:layout_constraintEnd_toEndOf="@+id/textViewNome"
          app:layout_constraintStart_toStartOf="@+id/textViewNome" app:layout_constraintHorizontal_bias="0.508"
          app:layout_constraintTop_toBottomOf="@+id/textViewNome" android:layout_marginTop="16dp"/>
  <TextView
          android:text="Apartamento"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textViewApartamento"
          app:layout_constraintTop_toBottomOf="@+id/txNome" app:layout_constraintEnd_toEndOf="@+id/txNome"
          app:layout_constraintStart_toStartOf="@+id/txNome" android:layout_marginTop="20dp"
  />
  <TextView
          android:text="Email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textViewEmail"
          app:layout_constraintTop_toBottomOf="@+id/txBloco" app:layout_constraintEnd_toEndOf="@+id/txBloco"
          app:layout_constraintStart_toStartOf="@+id/txBloco" android:layout_marginTop="35dp"
  />
  <TextView
          android:text="Nome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textViewNome"
          app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintHorizontal_bias="0.495"/>
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/txApart"
          app:layout_constraintTop_toBottomOf="@+id/textViewApartamento"
          app:layout_constraintEnd_toEndOf="@+id/textViewApartamento"
          app:layout_constraintStart_toStartOf="@+id/textViewApartamento" android:layout_marginTop="16dp"
          app:layout_constraintHorizontal_bias="0.441"/>
  <TextView
          android:text="Senha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textViewSenha"
          app:layout_constraintTop_toBottomOf="@+id/txEmail" app:layout_constraintEnd_toEndOf="@+id/txEmail"
          app:layout_constraintStart_toStartOf="@+id/txEmail" android:layout_marginTop="20dp"
  />
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPersonName"
          android:ems="10"
          android:id="@+id/txBloco"
          app:layout_constraintTop_toBottomOf="@+id/textViewBloco" app:layout_constraintEnd_toEndOf="@+id/txApart"
          app:layout_constraintStart_toStartOf="@+id/txApart" android:layout_marginTop="16dp"
  />
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          android:ems="10"
          android:id="@+id/txSenha"
          app:layout_constraintTop_toBottomOf="@+id/textViewSenha"
          app:layout_constraintEnd_toEndOf="@+id/textViewSenha"
          app:layout_constraintStart_toStartOf="@+id/textViewSenha" android:layout_marginTop="16dp"
  />
  <TextView
          android:text="Bloco"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" android:id="@+id/textViewBloco"
          app:layout_constraintTop_toBottomOf="@+id/txApart" app:layout_constraintEnd_toEndOf="@+id/txApart"
          app:layout_constraintStart_toStartOf="@+id/txApart" android:layout_marginTop="35dp"
  />
  <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textEmailAddress"
          android:ems="10"
          android:id="@+id/txEmail"
          app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
          app:layout_constraintEnd_toEndOf="@+id/textViewEmail"
          app:layout_constraintStart_toStartOf="@+id/textViewEmail" android:layout_marginTop="16dp"/>
  <Button
          android:text="Cadastrar"
          android:layout_width="215dp"
          android:layout_height="51dp" android:id="@+id/btnCadastrar"
          app:layout_constraintEnd_toEndOf="@+id/txSenha" app:layout_constraintStart_toStartOf="@+id/txSenha"
          app:layout_constraintTop_toBottomOf="@+id/txSenha" android:layout_marginTop="35dp"
          app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>